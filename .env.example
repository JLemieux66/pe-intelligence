# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/pe_intelligence

# JWT Authentication
JWT_SECRET_KEY=your-secret-jwt-key-change-in-production-use-long-random-string

# Admin Credentials
ADMIN_EMAIL=admin@example.com
# Generate hash using: python -m backend.auth YourPasswordHere
ADMIN_PASSWORD_HASH=your-bcrypt-hash-here

# OpenAI API Configuration (required for similar companies feature)
OPENAI_API_KEY=your-openai-api-key-here

# Optional: Crunchbase API (if using enrichment features)
CRUNCHBASE_API_KEY=your-crunchbase-api-key-here

# CORS Security - Allowed Origins (comma-separated)
# In production, add your deployed frontend domain(s)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,https://your-frontend-domain.vercel.app

# Application Settings (optional)
PORT=8000

# Email Configuration (for QA Reports)
# Get Gmail App Password: https://myaccount.google.com/apppasswords
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-gmail-app-password

# SMTP Configuration (Optional - defaults shown)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_FROM=pe-intelligence@yourdomain.com
